<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- <style name="AppTheme" parent="AppBaseTheme">
        All customizations that are NOT specific to a particular API-level can go here.
    </style> -->

    <!-- style for compass begin-->
    <style name="AppBaseThemeActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bodybg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="AppTheme.PopupMenu" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#7f7f7f</item>
    </style>
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Material.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleColor</item>
    </style>
    <style name="AppTheme.ActionBar.TitleColor" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- style for compass end-->

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
    </style>
</resources>
